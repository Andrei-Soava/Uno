<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%d{HH:mm:ss} %highlight{%-5level} [%t] [Server:%c{1}] - %msg%n"
        disableAnsi="false"
        noConsoleNoAnsi="false"
      />
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="onegame.server" level="debug" additivity="false">
      <AppenderRef ref="Console" />
    </Logger>

    <Root level="info">
      <AppenderRef ref="Console" />
    </Root>
  </Loggers>
</Configuration>